extends layout 

block content 

  h1 #{title}
  form(method='POST')
    div.form-group
      label(for='name') Genre: 
      input(id='name', class='form-control', type='text', placeholder='Fantasy, Poetry, etc.', name='name', required, value=(undefined===genre ? '' : genre.name))
      button(type="submit" class='btn btn-primary' style="margin-top:5px") Submit 

  if errors 
    ul 
      for error in errors 
        li!= error.msg