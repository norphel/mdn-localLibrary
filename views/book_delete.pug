extends layout 

block content 
  h1 #{title}: #{book.title} 

  if allBookInstances.length 
    p #[strong Delete the following book instances before attempting to delete this book.] 
    div(style='margin-left: 20px; margin-top: 20px;')
      h4 Book Instances 
      dl 
        each bookinstance in allBookInstances 
          dt 
            a(href=bookinstance.url) #{bookinstance.book.title} 
          dd #{bookinstance.book.summary} 
  else 
    p Do you really want to delete this Book?

    form(method='POST')
      .form-group 
        input#bookid.form-control(type='hidden', name='bookid', value=book._id)
      button.btn.btn-primary(type='submit') Delete